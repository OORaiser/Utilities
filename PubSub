var PubSub = {
    subscribe: function (ev, callback) {
        if (Object.prototype.toString.call(callback)) {
        }
        if (this._callback || this._callback = {}) {
            if (this._callback[ev] || this._callback[ev] = []) {
                this._callback[ev].push(callback)
            }
        }
        return this;
    },
    publish: function () {
        var args = Array.prototype.slice.call(argments, 0),
            ev = args.shift(),
            i = 0,
            l = args.length,
            list;
            
        if (!this._callback || !(list = this._callback[ev])) return;
        for (; i < l; i++) {
            list[i].apply(this, args)
        }
        return this;
    }
}
