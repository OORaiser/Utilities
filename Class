function Class () {
	var _class = function () {};
	
	_class.fn = _class.prototype;
	
	_class.extend = function (obj) {
		var extended = obj.extended;
		for (var i in obj) {
			_class[i] = obj[i]
		}
		if (extended) extended(_class)
	}
	
	_class.include = function (obj) {
		var included = obj.included;
		for (var i in obj) {
			_class.fn[i] = obj[i]
		}
		if (included) included(_class)
	}
	
	return _class;
	
}
